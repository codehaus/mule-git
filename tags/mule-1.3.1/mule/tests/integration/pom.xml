    <artifactId>mule-tests-integration</artifactId>
    <name>Integration Tests</name>
    <description>Tests which ensure that Mule sub projects work well together.</description>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <!-- These tests hang if you're behind a firewall.
                            TODO Figure out how to use proxy settings for the tests. -->
                        <exclude>org/mule/test/integration/client/MuleClientAxisExternalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/client/MuleClientWsdlSoapExternalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/providers/http/HttpFunctionalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/providers/xmpp/XmppFunctionalTestCase.java</exclude>
                        <!-- Requires an external Axis server running in Tomcat on 8080 with the Calculator.jws service deployed to it -->
                        <exclude>org/mule/test/integration/providers/soap/axis/AxisExternalServerTest.java</exclude>
                        <!-- This has never worked, maybe we should just ditch it? -->
                        <exclude>org/mule/test/integration/providers/soap/axis/AxisConnectorJmsTopicsFunctionalTestCase.java</exclude>
                        <!-- to implement VM streaming -->
                        <exclude>org/mule/test/integration/providers/soap/xfire/XFireConnectorVMFunctionalTestCase.java</exclude>

                        <exclude>org/mule/test/integration/providers/email/EMailFunctionalTestCase.java</exclude>
                        
                        <exclude>org/mule/test/integration/routing/replyto/ReplytoChainIntegration2TestCase.java</exclude>
                        <exclude>org/mule/test/integration/routing/replyto/ReplytoChainIntegration4TestCase.java</exclude>

                        <!-- Todo MULE-1192 -->
                        <exclude>org/mule/test/usecases/dlq/DLQExceptionHandlerTestCase.java</exclude>


                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

        <profiles>
        <profile>
            <id>java14</id>
            <activation>
                <jdk>1.4</jdk>
            </activation>
            <dependencies>
                <!--
                Sun's 1.4.x JVMs come with a bundled Crimson XML parser.
                Unfortunately it is very buggy and does not support validation
                against an XML Schema, so we have to unconditionally include
                both xml-apis and xerces (in matching versions!) for JDK 1.4.
                -->
                <dependency>
                    <groupId>xml-apis</groupId>
                    <artifactId>xml-apis</artifactId>
                    <version>1.3.03</version>
                </dependency>
                <dependency>
                    <groupId>xerces</groupId>
                    <artifactId>xercesImpl</artifactId>
                    <version>2.12.0</version>
                </dependency>
                <dependency>
                    <groupId>activemq</groupId>
                    <artifactId>activemq</artifactId>
                    <version>3.2.4</version>
                    <!-- These transitive dependencies are not found on ibiblio and cause
                    the build to fail. -->
                    <exclusions>
                        <exclusion>
                            <groupId>activemq</groupId>
                            <artifactId>activemq-core-test</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activemq</groupId>
                            <artifactId>smack</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activemq</groupId>
                            <artifactId>smackx</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activesoap</groupId>
                            <artifactId>jaxp-api</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>javacc</groupId>
                            <artifactId>javacc</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activecluster</groupId>
                            <artifactId>activecluster</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>incubator-derby</groupId>
                            <artifactId>derby</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>incubator-derby</groupId>
                            <artifactId>derbynet</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>org.springframework</groupId>
                            <artifactId>spring</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>xerces</groupId>
                            <artifactId>xmlParserAPIs</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>xmlbeans</groupId>
                            <artifactId>xmlbeans-jsr173-api</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>java5</id>
            <activation>
                <jdk>1.5</jdk>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>activemq</groupId>
                    <artifactId>activemq</artifactId>
                    <version>3.2.4</version>
                    <exclusions>
                        <exclusion>
                            <groupId>activemq</groupId>
                            <artifactId>activemq-core-test</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activemq</groupId>
                            <artifactId>smack</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activemq</groupId>
                            <artifactId>smackx</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activesoap</groupId>
                            <artifactId>jaxp-api</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>javacc</groupId>
                            <artifactId>javacc</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>activecluster</groupId>
                            <artifactId>activecluster</artifactId>
                        </exclusion>
                        <exclusion>
